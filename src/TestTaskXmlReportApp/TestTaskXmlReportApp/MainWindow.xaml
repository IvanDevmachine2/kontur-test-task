<Window x:Class="TestTaskXmlReportApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XML Report Transformer" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Управление функционалом -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <ComboBox x:Name="SourceFileComboBox" Width="150" Margin="0,0,80,0">
                <ComboBoxItem Content="Data1.xml"/>
                <ComboBoxItem Content="Data2.xml"/>
            </ComboBox>
            <Button x:Name="CalculateButton" Content="Рассчитать и выгрузить" 
                    Click="CalculateButton_Click" Padding="8"/>
        </StackPanel>

        <!-- Таблица для отображения результатов -->
        <DataGrid Grid.Row="1" x:Name="EmployeesDataGrid" Margin="10" AutoGenerateColumns="True"
                  IsReadOnly="True" AlternatingRowBackground="LightGray"/>

    </Grid>
</Window>